FROM ubuntu:18.04


RUN apt-get -y update && \
    apt-get -y install \
    git \
    python-pip \
    cmake \
    build-essential 


 RUN apt-get -y install qt4-default
 RUN apt-get -y install python-dev



RUN git clone https://github.com/Kittycat7J/mcedit2-docker.git
RUN cd mcedit2-docker/ && pip install -r requirements.txt && python setup.py develop

RUN rm -rf /var/cache/apt/archives /var/lib/apt/lists/*